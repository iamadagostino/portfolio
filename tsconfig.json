{
  "include": [
    ".react-router/types/**/*",
    "env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "postcss.config.mjs",
    "app/routes/$lang/article.slug/article.tss",
    "app/routes/$lang/articles/route.ts",
    "app/routes/$lang/admin/dashboard/dashboard.jsx"
  ],
  "compilerOptions": {
    "types": [
      "@react-router/node",
      "vite/client"
    ],
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public/dist",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "importHelpers": true,
    "removeComments": true
  },
  // Vite takes care of building everything, not tsc.
  "noEmit": true
}