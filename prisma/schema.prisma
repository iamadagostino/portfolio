// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}


enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id             Int     @id @default(autoincrement())
  username       String  @unique
  email          String  @unique
  passwordHash   String
  firstName      String?
  lastName       String?
  profilePicture String?

  // User role for access control
  role Role @default(USER)

  // Blog post relationships
  posts Post[]

  isActive   Boolean @default(true)
  isVerified Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Post {
  id       Int        @id @default(autoincrement())
  slug     String     @unique
  status   PostStatus @default(DRAFT)
  featured Boolean    @default(false)

  // SEO and metadata
  banner   String? // Path to banner image
  readTime Int? // Reading time in minutes

  // Author relationship
  authorId Int
  author   User @relation(fields: [authorId], references: [id])

  // Translations
  translations PostTranslation[]

  // Timestamps
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("posts")
}

model PostTranslation {
  id     Int    @id @default(autoincrement())
  locale String // Full locale codes like 'en-US', 'it-IT', etc.

  // Content fields
  title    String
  abstract String
  content  String  @db.Text // MDX content
  slug     String? // Language-specific slug (optional, defaults to main post slug)

  // SEO fields
  metaTitle       String?
  metaDescription String?

  // Relationships
  postId Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Unique constraint: one translation per locale per post
  @@unique([postId, locale])
  @@map("post_translations")
}
