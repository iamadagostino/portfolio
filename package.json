{
  "name": "portfolio",
  "homepage": "https://www.angelo-dagostino.com",
  "description": "Portfolio site for Angelo D'Agostino",
  "repository": "https://github.com/iamadagostino/portfolio.git",
  "author": "Angelo D'Agostino",
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "node ./scripts/dev.cjs && remix vite:dev",
    "start": "wrangler pages dev ./build/client",
    "postinstall": "node ./scripts/draco.cjs && node ./scripts/patch-remix-i18next-sourcemaps.cjs",
    "deploy": "pnpm run build && wrangler pages deploy ./build/client --project-name portfolio",
    "dev:sb": "storybook dev -p 9009 --no-open",
    "dev:sb-docs": "storybook dev -p 9009 --docs --no-open",
    "build:storybook": "storybook build",
    "deploy:storybook": "wrangler pages deploy ./storybook-static --project-name portfolio-storybook --branch main",
    "db:gen": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "db:up": "docker-compose up -d db",
    "db:down": "docker-compose down db",
    "db:wipe": "prisma migrate reset",
    "pretest:i": "pnpm run db:up && pnpx prisma migrate deploy test",
    "test:i": "vitest run --config ./vitest.config.integrations.ts test",
    "posttest:i": "pnpm run db:down",
    "pretest:i:ui": "pnpm run db:up && pnpx prisma migrate deploy test",
    "test:i:ui": "vitest run --config ./vitest.config.integrations.ts --ui --api 9527 test",
    "posttest:i:ui": "pnpm run db:down",
    "tsc": "tsc",
    "font": "zx ./scripts/typekit-font.mjs"
  },
